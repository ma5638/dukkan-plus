<!--====== Main App ======-->
<div id="app">
    <!--====== App Content ======-->
    <div class="app-content">

        <!--====== Section 1 ======-->
        <div class="u-s-p-y-60">

            <!--====== Section Content ======-->
            <div class="section__content">
                <div class="container">
                    <div class="breadcrumb">
                        <div class="breadcrumb__wrap">
                            <ul class="breadcrumb__list">
                                <li class="has-separator">

                                    <a href="/">Home</a>
                                </li>
                                <li class="is-marked">

                                    <a href="/shoppingCart">Cart</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section 1 ======-->


        <!--====== Section 2 ======-->
        <div class="u-s-p-b-60">

            <!--====== Section Intro ======-->
            <div class="section__intro u-s-m-b-60">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="section__text-wrap">
                                <h1 class="section__heading u-c-secondary">SHOPPING CART</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--====== End - Section Intro ======-->


            <!--====== Section Content ======-->
            <div class="section__content">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 u-s-m-b-30">
                            <div class="table-responsive">
                                <table class="table-p">
                                    <tbody>

                                        <!--====== Row ======-->
                                        <tr>
                                            <td>
                                                <span class="table-p__price">Product</span>
                                            </td>
                                            <td>
                                                <span class="table-p__price">Price</span>
                                            </td>
                                            <td>
                                                <span class="table-p__price">Quantity</span>
                                            </td>
                                            <td>
                                            </td>

                                        </tr>
                                        <% total=0.00; %>
                                            <% for(item of shoppingCart) { %>
                                                <tr>
                                                    <td>
                                                        <div class="table-p__box">
                                                            <div class="table-p__img-wrap">
                                                                <% image_link=item.product.Category.length!=0 &&
                                                                    item.product.Category[0].name && item.product.image?
                                                                    item.product.Category[0].name + "/" +
                                                                    item.product.image:"product-default.jpg" %>
                                                                    <img class="u-img-fluid"
                                                                        src="/images/product/<%= image_link %>" alt="">
                                                            </div>
                                                            <div class="table-p__info">

                                                                <span class="table-p__name">

                                                                    <a href="/products/<%= item.product.product_id %>">
                                                                        <%= item.product.name %>
                                                                    </a></span>

                                                                <!-- <span class="table-p__category">

                                                                <a href="shop-side-version-2.html">Electronics</a></span> -->
                                                                <!-- <ul class="table-p__variant-list">
                                                                <li>

                                                                    <span>Size: 22</span></li>
                                                                <li>

                                                                    <span>Color: Red</span></li> -->
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>

                                                        <span class="table-p__price">AED <%= item.product.price || "N/A"
                                                                %></span>
                                                        <% item_price=item.product.price || 0.00 %>
                                                            <% total +=item_price*item.quantity %>
                                                    </td>
                                                    <td>
                                                        <span class="table-p__price">
                                                            <%= item.quantity || "N/A" %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <div class="table-p__del-wrap">
                                                            <form class="route-box__link" action="/shoppingCart/remove"
                                                                method="POST">
                                                                <input type="hidden" name="item_id"
                                                                    value="<%=item.item_id%>">
                                                                <button type="submit"
                                                                    class="btn far fa-trash-alt table-p__delete-link btn--icon"></button>
                                                            </form>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% } %>
                                                    <!--====== End - Row ======-->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="route-box">
                                <div class="route-box__g1">

                                    <a class="route-box__link" href="/products"><i
                                            class="fas fa-long-arrow-alt-left"></i>

                                        <span>CONTINUE SHOPPING</span></a>
                                </div>
                                <div class="route-box__g2">

                                    <form class="route-box__link" action="/shoppingCart/empty" method="POST">

                                        <button type="submit" class="btn route-box__link btn--icon">
                                            <i class="fas fa-trash"></i>

                                            <span>CLEAR CART</span>
                                        </button>
                                    </form>

                                    <!-- <form class = "route-box__link border-0" action="/" method="GET">
                                            
                                            <button type="submit" class="btn route-box__link btn--icon" >
                                                <i class="fas fa-sync"></i>
                                                <span>UPDATE CART</span>
                                            </button>
                                        </form> -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--====== End - Section Content ======-->
        </div>
        <!--====== End - Section 2 ======-->


        <!--====== Section 3 ======-->
        <div class="u-s-p-b-60">

            <!--====== Section Content ======-->
            <div class="section__content">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 u-s-m-b-30">
                            <form class="f-cart" action="/checkout" method="GET">
                                <div class="row">
                                    <div class="col-lg-4 col-md-6 u-s-m-b-30">
                                        <div class="f-cart__pad-box">
                                            <div class="u-s-m-b-30">
                                                <table class="f-cart__table">
                                                    <tbody>
                                                        <!-- <tr>
                                                                <td>SHIPPING</td>
                                                                <td>$4.00</td>
                                                            </tr>
                                                            <tr>
                                                                <td>TAX</td>
                                                                <td>AED 0.00</td>
                                                            </tr>
                                                            <tr>
                                                                <td>SUBTOTAL</td>
                                                                <td>$379.00</td>
                                                            </tr> -->
                                                        <tr>
                                                            <td>GRAND TOTAL</td>
                                                            <td>AED <%= Math.round(total*100)/100 %> 
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div>
                                                <button class="btn btn--e-brand-b-2" type="submit">
                                                    PROCEED TO CHECKOUT
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!--====== End - Section Content ======-->
        </div>
        <!--====== End - Section 3 ======-->
    </div>
    <!--====== End - App Content ======-->
</div>
<!--====== End - Main App ======-->